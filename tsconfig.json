{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": false
    },
    "exclude": [
        "node_modules",
        "platforms"
    ],
    "filesGlob": [
      "**/*.ts",
      "**/*.tsx",
      "!node_modules/**"
    ]
}
